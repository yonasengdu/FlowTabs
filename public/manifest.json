{
  "manifest_version": 3,
  "name": "TabMgr",
  "version": "1.0",
  "description": "An extension to switch between Chrome tabs using Alt+Q",
  "permissions": ["tabs", "storage", "scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "alt-q-switch": {
      "suggested_key": { "default": "Alt+Q" },
      "description": "Activate Tab Switcher"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["switcher.css"],
      "matches": ["<all_urls>"]
    }
  ]
}